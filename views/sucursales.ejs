      }

      .branch-header h4 {
        margin: 0;
        color: #333;
        font-weight: 600;
        font-size: 1.2rem;
      }

      .branch-card.nearest .branch-header h4 {
        color: #ff6b35;
      }

      .branch-meta {
        display: flex;
        align-items: center;
        gap: 15px;
      }

      .distance-badge {
