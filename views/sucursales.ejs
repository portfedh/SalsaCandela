      }

      .find-nearest-section h3 {
        color: #333;
        margin-bottom: 15px;
        font-weight: 600;
      }

      .branch-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        margin-bottom: 20px;
