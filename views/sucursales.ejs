        border: 2px solid #ff6b35;
        color: #ff6b35;
        padding: 12px 25px;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
      }

      .btn-outline-primary:hover {
        background: #ff6b35;
        color: white;
        text-decoration: none;
      }

      .btn-primary {
        background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%);
        border: none;
        padding: 15px 30px;
        font-weight: 600;
        border-radius: 8px;
        transition: transform 0.3s ease;
      }

