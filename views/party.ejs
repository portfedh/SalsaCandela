<!DOCTYPE html>
<html class="no-js" lang="es">
  <!-- Include head -->
  <%- include('partials/store_head') -%>

  <!-- Party-specific styles -->
  <link rel="stylesheet" href="css/style_party.css" />

  <!-- Dynamic party images -->
  <style>
    @media screen and (max-width: 768px) {
      .event-featured-image {
        background-image: url('img/party/<%= party.images.mobile %>') !important;
      }
    }
  </style>

  <body>
    <!-- Include header with custom mobile nav -->
    <%- include('partials/store_header_with_custom_mobile') -%>

    <!-- Include page header -->
    <%- include('partials/page_header') -%>

    <!-- Event Area Start -->
    <section class="event-area pt-50 pb-50">
      <div class="container event-container">
        <!-- Hero Section -->
        <div class="row">
          <div class="col-12">
            <div class="event-hero text-center mb-60">
              <div class="hero-badge">
                <span>üéµ Pr√≥ximo Evento</span>
              </div>
              <h1 class="hero-title"><%= party.title %></h1>
              <p class="hero-subtitle">
                Una noche llena de Salsa, Bachata y buena vibra
              </p>
            </div>
          </div>
        </div>

        <!-- Main Event Card -->
        <div class="row">
          <div class="col-lg-10 offset-lg-1">
            <div class="event-main-card">
              <!-- Event Image Section -->
              <div class="event-image-section">
                <div class="event-image-container event-featured-image" style="background-image: url('img/party/<%= party.images.desktop %>')">
                  <div class="image-overlay">
                    <div class="event-date-badge">
                      <div class="date-day"><%= party.date.day %></div>
                      <div class="date-month"><%= party.date.month %></div>
                      <div class="date-year"><%= party.date.year %></div>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Event Content Section -->
              <div class="event-content-section">
                <div class="row">
                  <!-- Left Column: Main Info -->
                  <div class="col-lg-8">
                    <div class="event-main-content">
                      <!-- Event Title & Genre -->
                      <div class="event-header">
                        <h2 class="event-name"><%= party.title %></h2>
                        <div class="event-genres-tags">
                          <span class="genre-tag salsa">Salsa</span>
                          <span class="genre-tag timba">Timba</span>
                          <span class="genre-tag bachata">Bachata</span>
                        </div>
                      </div>

                      <!-- Event Description -->
                      <div class="event-description">
                        <p>
                          Ven a bailar Salsa y Bachata en nuestra fiesta
                          mensual. Una noche llena de baile y convivencia con
                          toda la comunidad de Salsa Candela.
                        </p>
                        <p>
                          La fiesta es abierta a todo p√∫blico y para todos los
                          niveles. Tenemos 3 pistas de baile y bebidas a precios
                          accesibles.
                        </p>
                      </div>

                      <!-- Event Schedule -->
                      <div class="event-schedule-card">
                        <h3 class="schedule-header">
                          <span class="schedule-icon">üïò</span>
                          Programa del Evento
                        </h3>
                        <div class="schedule-timeline">
                          <div class="timeline-item">
                            <div class="timeline-time">8:30 PM</div>
                            <div class="timeline-content">
                              <strong>Clase de Bachata</strong>
                              <p>Todos los niveles bienvenidos</p>
                            </div>
                          </div>
                          <div class="timeline-item featured">
                            <div class="timeline-time">9:00 PM</div>
                            <div class="timeline-content">
                              <strong>¬°Inicia la Fiesta!</strong>
                              <p>Salsa, Timba y Bachata</p>
                            </div>
                          </div>
                          <div class="timeline-item">
                            <div class="timeline-time">3:00 AM</div>
                            <div class="timeline-content">
                              <strong>Cierre del Evento</strong>
                              <p>Hasta la pr√≥xima</p>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>

                  <!-- Right Column: Details -->
                  <div class="col-lg-4">
                    <div class="event-details-sidebar">
                      <!-- Date & Time Card -->
                      <div class="detail-card datetime-card">
                        <div class="card-icon">üìÖ</div>
                        <div class="card-content">
                          <h4>Fecha y Hora</h4>
                          <p class="event-date">
                            <%= fullDate %>
                          </p>
                          <p class="event-time"><%= party.eventTime %></p>
                        </div>
                      </div>

                      <!-- Location Card -->
                      <div class="detail-card location-card">
                        <div class="card-icon">üìç</div>
                        <div class="card-content">
                          <h4>Ubicaci√≥n</h4>
                          <a
                            href="<%= activeLocation.googleMapsUrl %>"
                            class="location-address"
                          >
                            <%= activeLocation.address %><br />
                            <%= activeLocation.city %>
                          </a>
                          <a
                            href="<%= activeLocation.googleMapsUrl %>"
                            class="location-details"
                          >
                            Ver detalles del lugar
                          </a>
                        </div>
                      </div>

                      <!-- Pricing Card -->
                      <div class="detail-card pricing-card">
                        <div class="card-icon">üí∞</div>
                        <div class="card-content">
                          <h4>Precios</h4>
                          <div class="price-options">
                            <div class="price-option featured">
                              <span class="price">$<%= party.pricing.presale.price %></span>
                              <span class="price-label"><%= party.pricing.presale.label %></span>
                            </div>
                            <div class="price-option">
                              <span class="price">$<%= party.pricing.door.price %></span>
                              <span class="price-label"><%= party.pricing.door.label %></span>
                            </div>
                          </div>
                        </div>
                      </div>

                      <!-- CTA Button -->
                      <div class="event-cta-sidebar">
                        <a
                          class="cta-button primary"
                          href="#"
                          onclick="handlePayment()"
                        >
                          <span class="cta-icon">üé´</span>
                          <span class="cta-text">Comprar Boletos</span>
                          <span class="cta-subtext"><%= party.pricing.presale.label %> $<%= party.pricing.presale.price %></span>
                        </a>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- Event Area End -->

    <!-- Include Map -->
    <%- include('partials/store_map') -%>

    <!-- Include Footer -->
    <%- include('partials/store_footer') -%>

    <!-- Include Java Script -->
    <%- include('partials/store_js_scripts') -%>

    <!-- Include custom mobile nav script -->
    <script src="js/mobileNavigation.js"></script>

    <!-- Include payment modal -->
    <%- include('partials/payment_modal') -%>

    <!-- Body & html close -->
  </body>
</html>
