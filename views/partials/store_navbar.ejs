    <!-- Header Area Start (Desktop Only) -->
    <header class="top">
      <div class="header-area ptb-18 header-sticky">
        <div class="container">
          <div class="row">
            <div class="col-lg-2">
              <div class="logo">
                <img
                  src="/img/logo/logo.png"
                  alt="Salsa Candela Logo"
                  class="logo"
                />
              </div>
            </div>
            <div class="col-lg-8">
              <div class="content-wrapper">
                <!-- Main Menu Start -->
                <nav class="main-menu text-center" role="navigation">
                  <% if (typeof lang !== 'undefined' && lang === 'en') { %>
                  <ul>
                    <li><a href="/en">Home</a></li>
                    <li><a href="/en/salsa">Salsa</a></li>
                    <li><a href="/en/bachata">Bachata</a></li>
                    <li><a href="/en/private-classes">Private</a></li>
                    <li><a href="/en/party">Party</a></li>
                    <li><a href="/en/branches">Branches</a></li>
                    <li><a href="/en/faq">FAQ</a></li>
                  </ul>
                  <% } else { %>
                  <ul>
                    <li><a href="/">Inicio</a></li>
                    <li><a href="/salsa">Salsa</a></li>
                    <li><a href="/bachata">Bachata</a></li>
                    <li><a href="/particulares">Particulares</a></li>
                    <li><a href="/fiesta">Fiesta</a></li>
                    <li><a href="/sucursales">Sucursales</a></li>
                    <li><a href="/faq">FAQ</a></li>
                  </ul>
                  <% } %>
                </nav>
                <div class="mobile-menu"></div>
                <!-- Main Menu End -->
              </div>
            </div>
            <div class="col-lg-2 d-none d-lg-block">
              <div class="header-contact text-end d-flex align-items-center justify-content-end gap-2">
                <!-- Language Switcher -->
                <div class="language-switcher">
                  <% if (typeof lang !== 'undefined' && lang === 'en') { %>
                  <a href="<%= typeof currentPath !== 'undefined' ? currentPath : '/' %>"
                     class="lang-flag"
                     title="Espa単ol"
                     onclick="gtag('event', 'language_switch', {'event_category': 'Navigation', 'event_label': 'Spanish', 'language': 'es', 'value': 1});">
                    ES
                  </a>
                  <a href="/en<%= typeof currentPath !== 'undefined' ? currentPath : '' %>"
                     class="lang-flag active"
                     title="English"
                     onclick="gtag('event', 'language_switch', {'event_category': 'Navigation', 'event_label': 'English', 'language': 'en', 'value': 1});">
                    EN
                  </a>
                  <% } else { %>
                  <a href="<%= typeof currentPath !== 'undefined' ? currentPath : '/' %>"
                     class="lang-flag active"
                     title="Espa単ol"
                     onclick="gtag('event', 'language_switch', {'event_category': 'Navigation', 'event_label': 'Spanish', 'language': 'es', 'value': 1});">
                    ES
                  </a>
                  <a href="/en<%= typeof currentPath !== 'undefined' ? currentPath : '' %>"
                     class="lang-flag"
                     title="English"
                     onclick="gtag('event', 'language_switch', {'event_category': 'Navigation', 'event_label': 'English', 'language': 'en', 'value': 1});">
                    EN
                  </a>
                  <% } %>
                </div>
                <!-- Registration Button -->
                <% if (typeof lang !== 'undefined' && lang === 'en') { %>
                <form action="/en/checkout" method="post">
                  <button class="banner-btn" type="submit" onclick="gtag('event', 'nav_registration_click', {'event_category': 'Navigation', 'event_label': 'Register Desktop', 'language': '<%= lang %>', 'value': 1});">Register</button>
                </form>
                <% } else { %>
                <form action="/checkout" method="post">
                  <button class="banner-btn" type="submit" onclick="gtag('event', 'nav_registration_click', {'event_category': 'Navigation', 'event_label': 'Inscribirme Desktop', 'language': '<%= typeof lang !== "undefined" ? lang : "es" %>', 'value': 1});">Inscribirme</button>
                </form>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </header>
    <!-- Header Area End -->

